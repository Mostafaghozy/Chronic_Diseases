import 'package:flutter/material.dart';

import '../../../../../../core/app_color.dart';
import '../../../../../../core/styles.dart';
import '../../../../../../core/widgets/custom_button.dart';
import 'check_symptoms_bottom_sheet.dart';
import 'check_symptoms_headline.dart';
import 'check_symptoms_login_container.dart';

class CheckSymptomsPageViewBody extends StatelessWidget {
  const CheckSymptomsPageViewBody({super.key});

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      body: Padding(
        padding: const EdgeInsets.symmetric(horizontal: 60),
        child: Column(
          mainAxisAlignment: MainAxisAlignment.start,
          children: [
            CheckSymptomsHeadline(),
            SizedBox(height: 225),
            CheckSymptomsLoginContainer(),
            SizedBox(
              height: 16,
            ),
            CustomButton(
              text: "Log Now",
              style: Styles.textStyle16,
              onTap: () {
                showModalBottomSheet(
                  backgroundColor: AppColor.kWhiteColor,
                  isScrollControlled: true,
                  useSafeArea: true,
                  shape: RoundedRectangleBorder(
                    borderRadius: BorderRadius.vertical(top: Radius.circular(20)),
                  ),
                  context: context,
                  builder: (BuildContext context) {
                    return const CheckSymptomsBottomSheet();
                  },
                );
              },
              color: AppColor.kSecondaryGreenColor,
              width: 200,
              height: 52,
              borderRadius: 24,
            ),
          ],
        ),
      ),
    );
  }
}
